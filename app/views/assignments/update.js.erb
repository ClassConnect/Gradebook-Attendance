var grade_id;
var new_point_value = <%= @assignment.point_value %>;
var new_grade;
var i=0;
<% @assignment.assignment_grades.each do |grade|%>
  grade_id = "#" + "<%= grade.id %>";
  $(grade_id).attr('points', new_point_value);
  new_grade = calculateGrade($(grade_id).parent(), scale);
  if(new_grade){
    oTable.fnUpdate(new_grade, i, 2);
  }
  i++;
<% end %>  