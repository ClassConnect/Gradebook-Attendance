:javascript
  $(document).ready(function() {
    $('#new_assignment').bind('submit', function(){
    $.post($(this).attr("action") + '.js', $(this).serialize(), null, "script");
    closeBox();
    return false;
    });

  }); 

=form_for @assignment, :html => {:id => "new_assignment"} do |f|
  %div{:class => "field"}  
    =f.label :course_id
    =f.text_field :course_id
  %div{:class => "field"}
    =f.label :name
    =f.text_field :name
  %div{:class => "field"}
    =f.label :description
    =f.text_area :description
  %div{:class => "field"}
    =f.label :date_due
    =f.text_field :date_due
  %div{:class => "button"}
    =f.submit "Submit"