:javascript
  $(function() {
    $("#assignment_date_due").datepicker({dateFormat: 'yy-mm-dd'});
  });
=form_for (@assignment) do |f|
  %div{:class => "field"}  
    =f.label :course_id
    =f.text_field :course_id
  %div{:class => "field"}
    =f.label :name
    =f.text_field :name
  %div{:class => "field"}
    =f.label :description
    =f.text_area :description
  %div{:class => "field"}
    =f.label :date_due
    =f.text_field :date_due
  %div{:class => "button"}
    =f.submit "Submit"

 